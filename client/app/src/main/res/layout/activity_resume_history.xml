<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.resume.ResumeHistoryActivity"
    android:paddingTop="20dp"
    android:paddingHorizontal="20dp"
    android:layout_marginBottom="?attr/actionBarSize">

    <TextView
        android:id="@+id/showResumeHistoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_semibold"
        android:text="@string/text_resume_history_title"
        android:textAlignment="center"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/resumeHistoryEmptyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:fontFamily="@font/barlow_medium"
        android:text="@string/text_resume_history_empty"
        android:textColor="@color/text_secondary"
        android:textSize="18sp"
        android:textAlignment="center"
        android:background="@drawable/corner_radius_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showResumeHistoryTitle"/>


    <androidx.recyclerview.widget.RecyclerView
        android:visibility="visible"
        android:id="@+id/resumeHistoryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showResumeHistoryTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>